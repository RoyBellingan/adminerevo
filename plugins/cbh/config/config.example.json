{
    "SELECT": {
        "TABLE": {
            "COLUMN1": { //this will create a link, like what happens with a foreign key
                "db" : "ANY_DB",                 //if the db is omitted, the current one will be used
                "table": "ANY_TABLE_OR_VIEW",
                "id": "id"
            },
            "COLUMN4": { //this will rewrite the cell content using a custom function (defined in the DB_NAME.function.js file)
                "rewrite": "imageEmbed1"
            }
        }
    },
    "EDIT": {
        "TABLE": {
            "COLUMN2": { //this will block the ability to edit this field in the edit page
                "readonly": true,
                "placeholder": "do not use this column!" //Optional, else previous val is shown
            },
            "COLUMN3": { //this provide a dropdown to pick a value from when in the edit / insert page
                "dropdown" : true,
                //if the db is omitted, the current one will be used
                "table": "ANY_TABLE_OR_VIEW",
                "id": "id",
                "text": "name",
                "where": "AND destinationId IS NOT NULL" //you can optionall define the where condition to prefilter
            }
        }
    }
}
